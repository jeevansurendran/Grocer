<?xml version="1.0" encoding="utf-8"?>
<resources>
    //text views
    <style name="HeadingTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="fontFamily">@font/raleway</item>
        <item name="android:textSize">@dimen/font_normal</item>
    </style>
    <style name="HeadingExtraHugeTextStyle" parent="HeadingTextStyle">
        <item name="android:textSize">@dimen/font_extra_huge</item>
    </style>

    //buttons
    <style name="CircularButtonStyle">
        <item name="android:paddingStart">@dimen/spacing_extra_huge</item>
        <item name="android:paddingEnd">@dimen/spacing_extra_huge</item>
    </style>

    //textt fields
    <style name="GreenInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
    </style>
</resources>