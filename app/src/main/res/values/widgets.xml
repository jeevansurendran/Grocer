<?xml version="1.0" encoding="utf-8"?>
<resources>
    //text views

    <style name="HeadingTextStyle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:lineSpacingExtra">-6dp</item>
    </style>

    <style name="HeadingHugeTextStyle" parent="HeadingTextStyle">
        <item name="android:textSize">@dimen/font_huge</item>
    </style>

    <style name="HeadingLargeTextStyle" parent="HeadingTextStyle">
        <item name="android:textSize">@dimen/font_large</item>
    </style>

    <style name="HeadingExtraHugeTextStyle" parent="HeadingTextStyle">
        <item name="android:textSize">@dimen/font_extra_huge</item>
    </style>

    <style name="ParagraphStyle">
        <item name="android:textSize">@dimen/font_tiny</item>
    </style>

    //buttons

    <style name="CircularButtonStyle">
        <item name="android:paddingStart">@dimen/spacing_extra_huge</item>
        <item name="android:paddingEnd">@dimen/spacing_extra_huge</item>
    </style>

    //text fields

    <style name="GreenInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="ToolBarTextStyle">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>