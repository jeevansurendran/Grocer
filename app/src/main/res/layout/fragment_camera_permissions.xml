<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_camera_permissions_heading"
        style="@style/HeadingHugeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        android:text="Hello,"
        app:layout_constraintStart_toStartOf="@id/im_camera_permissions_bread"
        app:layout_constraintTop_toBottomOf="@id/im_camera_permissions_bread" />

    <TextView
        android:id="@+id/tv_camera_permissions_text"
        style="@style/HeadingTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We need your location\nto serve you better :)"
        android:translationY="-10dp"
        app:layout_constraintStart_toStartOf="@id/im_camera_permissions_bread"
        app:layout_constraintTop_toBottomOf="@+id/tv_camera_permissions_heading" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/xml_camera_permissions_milk" />

    <ImageView
        android:id="@+id/im_camera_permissions_bread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/xml_camera_permissions_bread" />

    <ImageView
        android:id="@+id/im_camera_permissions_delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/xml_general_food_delivery" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/im_camera_permissions_delivery"
        app:srcCompat="@drawable/xml_camera_permissions_juice" />

    <Button
        android:id="@+id/btn_camera_permissions_request_permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/im_camera_permissions_delivery" />
</androidx.constraintlayout.widget.ConstraintLayout>